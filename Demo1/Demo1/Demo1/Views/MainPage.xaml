<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
xmlns="http://xamarin.com/schemas/2014/forms" 
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
x:Class="Demo1.MainPage">
	<ContentPage.Content>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height = "1*"/>
				<RowDefinition Height = "1*"/>
				<RowDefinition Height = "1*"/>
				<RowDefinition Height = "1*"/>
			</Grid.RowDefinitions>
			<Label Grid.Row = "0" Text = "{Binding WelcomeText}"/>
			<Button Grid.Row = "1" Text = "Add a Person" Clicked = "OnNewPerson_Clicked"/>
			<Button Grid.Row = "2" Text = "Person List" Clicked = "OnPersonList_Clicked"/>
			<Button Grid.Row = "3" Text = "Settings" Clicked = "OnSettings_Clicked"/>
		</Grid>
	</ContentPage.Content>
</ContentPage>
